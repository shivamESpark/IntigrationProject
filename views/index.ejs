<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
</head>
<style>
    #mn{
        margin: 0 auto;
        width: 350px;
    }
    #submit{
        background-color: blue;
        border-radius: 7px;
        text-align: center;
        color:wheat;
        padding:5px;
    }
    #login{
        background-color: rgb(34, 193, 63);
        border-radius: 7px;
        text-align: center;
        color: white;
        padding:5px;
    }
    #llink{
        text-decoration: none;
    }
    #btn{
        display: flex;
        margin: 5px;
    }
    #btn p{
        margin: 5px;
    }
</style>
<body>
    <div id="mn">
    <h1>Student Registration</h1>
    <table>
        <form method="post" id="form">
            <tr>
                <td><label for="fname">First Name</label></td>
                <td><input type="text" name="fname" id="fname"></td>
            </tr>
            <tr>
                <td><label for="lname">Last Name</label></td>
                <td><input type="text" name="lname" id="lname"></td>
            </tr>
            <tr>
                <td><label for="email">Email</label></td>
                <td><input type="text" name="email" id="email"></td>
            </tr>
            <tr>
                <td><label for="dob">Date of Birth</label></td>
                <td><input type="text" name="dob" id="dob"></td>
            </tr>
            <tr>
                <td>    
                    <select name="gender" id="gender">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </td>
            </tr>
            
            <tr>
                <td><a href="" id="alink" hidden>Click Here To Activate</a></td>
                <td><p id="exists" hidden></p></td>
            </tr>
        </form>

    </table>
    <div id="btn">
        <p id="submit">Sign Up</p>
        <a href="http://localhost:8080/login" id="llink"><p id="login">Sign In</p></a>
    </div>
    </div>
</body>
<script>
    const submit = document.getElementById("submit");
    submit.addEventListener("click", dbSend)

    const alink = document.querySelector("#alink");
    const exists = document.querySelector("#exists");

    const formData = document.querySelector("form");
    let sendReadyObj = undefined;
    
    
    function objCreation(){
        // const data = new FormData(formData).entries();
        let formEntries = new FormData(document.querySelector("form"));
        const obj = {}
        formEntries.forEach((values, keys)=>{
            if(obj[keys] != undefined){
                obj[keys] += `,${values}`;
            } else {
                obj[keys] = values;
            }
        });
        sendReadyObj = obj;
        return obj;
    }


    async function dbSend(){
        const response = await fetch( "http://localhost:8080/add",{
                method : "post",
                body : JSON.stringify(objCreation()),
                headers : {
                    'Content-Type': 'application/json'
                }
            }
        );

        const data = await response.json();

        
        if(data.status == 2007){
            exists.innerHTML = "The User Is Exists and Inactive Please Check Your Mail!";
            exists.hidden = false;
        }

        if(data.status == 1000){
            exists.innerHTML = "The User Is Already Exists!";
            exists.hidden = false;
        }

        if(data.status == 1007){
            alink.href = ""
        }

        if(data.status == 200){
            exists.innerHTML = "";
            alink.href = `/add/createPassword/${data.alink}/:${data.uid}`;
            alink.hidden = false;
        } else {
            console.log("status 200 error");
        }
    }

  
</script>
</html>